<Window x:Class="SkyGuide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hava Durumu Uygulaması" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="CityTextBox" Width="200" Height="30" Margin="300,202,300,202" Grid.RowSpan="2" />
        <Button x:Name="GetWeatherButton" Width="100" Height="30" Margin="455,202,245,202" Content="Get Weather" Click="GetWeatherButton_Click" Grid.RowSpan="2" />
        <TextBlock x:Name="WeatherInfoTextBlock" Margin="0,10,20,68" TextWrapping="Wrap" />
    </Grid>
</Window>